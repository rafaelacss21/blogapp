<% include ../partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit "<%= blog.title %>"</div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="title" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <label>Image url</label>
            <input type="text" name="image" value="<%= blog.image %>" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="content" required><%= blog.content %></textarea>
        </div>
        <button type="submit" class="ui right labeled inverted green icon button">Save<i class="right save alternate icon"></i></button>
    </form>
</div>
<% include ../partials/footer %>
