<% include ../partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Comment</div>
    <form class="ui form" action="/blogs/<%= blog_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Comment</label>
            <input type="text" name="comment[text]" value="<%=comment.text %>" required>
        </div>
        <button type="submit" class="ui right labeled inverted green icon button">Submit<i class="right save alternate icon"></i></button>
    </form>
    <a href="/blogs">Go Back</a>
</div>
